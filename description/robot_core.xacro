<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro"/> <!-- the file contains the inertial properties -->

    <!-- colors definitions-->
    <material name="white"> 
        <color rgba="1 1 1 1" /> 
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/> 
    </material>

    <material name="blue"> 
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black"> 
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <!-- BASE LINK -->
    <link name="base_link"> <!-- main reference for all the other links -->
    </link>

    <!-- CHASSIS LINK -->
    <joint name="chassis_joint" type="fixed"> <!-- Chassis == telaio -->
        <parent link="base_link"/> 
        <child link="chassis"/> 
        <origin xyz="-0.1 0 0"/> <!-- position with reference to the base link -->
    </joint>

    <link name="chassis"> <!-- chassis definition-->
        <visual> <!-- visual aspect -->
            <origin xyz="0.15 0 0.075"/> <!-- position with reference to the link -->
            <geometry>
                <box size="0.3 0.3 0.15"/> <!-- shape with dimension (x,y,z) -->
            </geometry>
            <material name="blue"/> 
        </visual>
        <collision> <!-- physic collision-->
            <origin xyz="0.15 0 0.075"/> <!-- same as visual -->
            <geometry>
                <box size="0.3 0.3 0.15"/> <!-- same as visual-->
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.3" y="0.3" z="0.15"> <!-- inertial properties -->
            <origin xyz="0.15 0 0.075" rpy="0 0 0"/> <!-- mass center origin -->
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis"> <!-- gazebo parameters -->
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- LEFT WHEEL LINK -->
    <joint name="left_wheel_joint" type="continuous"> 
        <parent link="base_link"/> 
        <child link="left_wheel"/>
        <origin xyz="0 0.175 0" rpy="-${pi/2} 0 0" /> <!-- position and orientation of the wheel -->
        <axis xyz="0 0 1"/> <!-- rotation axis -->
    </joint>

    <link name="left_wheel">
        <visual> <!-- visual aspect -->
            <geometry>
                <cylinder radius="0.05" length="0.04"/> <!-- shape (radius, lenght) -->
            </geometry>
            <material name="red"/>
        </visual>
        <collision> <!-- physic collision -->
            <geometry>
                <sphere radius = "0.05"/>
                <!-- <cylinder radius="0.05" length="0.04"/>  same as visual-->
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05"> <!-- inertial properties-->
            <origin xyz="0 0 0" rpy="0 0 0"/> <!-- mass center origin-->
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_wheel"> <!-- gazebo parameters -->
        <material>Gazebo/Red</material> 
    </gazebo>

    <!-- RIGHT WHEEL LINK -->
    <joint name="right_wheel_joint" type="continuous"> 
        <parent link="base_link"/> 
        <child link="right_wheel"/>
        <origin xyz="0 -0.175 0" rpy="${pi/2} 0 0" /> <!-- position and orientation of the wheel -->
        <axis xyz="0 0 -1"/> <!-- rotation axis (opposite of the left wheel) -->
    </joint>

    <link name="right_wheel"> 
        <visual> <!-- visual aspect -->
            <geometry>
                <cylinder radius="0.05" length="0.04"/> <!-- shape (radius, lenght)-->
            </geometry>
            <material name="red"/>
        </visual>
        <collision> <!-- physic collision -->
            <geometry>
                <sphere radius = "0.05"/>
                <!-- <cylinder radius="0.05" length="0.04"/>  same as visual-->
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05"> <!-- inertial properties-->
            <origin xyz="0 0 0" rpy="0 0 0"/> <!-- mass center origin -->
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_wheel"> <!-- gazebo parameters -->
        <material>Gazebo/Red</material>
    </gazebo>

    <!-- CASTER WHEEL LINK -->
    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <origin xyz="0.24 0 0"/>
    </joint>

    <link name="caster_wheel">
        <visual> <!-- visual aspect -->
            <geometry>
                <sphere radius="0.05"/> <!-- sphere (radius)-->
            </geometry>
            <material name="white"/>
        </visual>
        <collision> <!-- physic collision -->
            <geometry>
                <sphere radius="0.05"/> <!-- same as visual -->
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.05"> <!-- inertial properties -->
            <origin xyz="0 0 0" rpy="0 0 0"/> <!-- mass center origin -->
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="caster_wheel"> <!-- gazebo params -->
        <material>Gazebo/White</material>
        <mu1 value="0.001"/> <!-- friction on X axis -->
        <mu2 value="0.001"/> <!-- friction on Y axis -->
    </gazebo>

</robot>
